<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Avalonia.CasparCG.Client.Views.NotConnectedView">

	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
		<TextBlock Classes="h1" HorizontalAlignment="Center">No connection</TextBlock>
		<TextBlock HorizontalAlignment="Center">Seems like your connection is off..</TextBlock>
		<TextBlock HorizontalAlignment="Center">Click the button below to connect on CasparCG</TextBlock>
		<Button Margin="25" Width="80" Height="30" HorizontalAlignment="Center" HorizontalContentAlignment="Center">Connect</Button>
	</StackPanel>
 
  
</UserControl>
